<UserControl x:Class="DortanApp.UCCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DortanApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label
            x:Name="labCreer"
            HorizontalAlignment="Center"
            Content="Créer Activité"
            FontSize="36"
            FontWeight="Bold" />
        <Label Margin="60,50,0,0" Content="Nom" />
        <TextBox x:Name="txtNomActivite" Margin="60,5,60,0" TextWrapping="Wrap" />
        <Button Margin="100,50,100,0" Content="Valider" Click="Button_Click" />


    </StackPanel>
</UserControl>
