<UserControl
    x:Class="DortanApp.UCCreation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DortanApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <Label
            x:Name="labCreer"
            Margin="0,20,0,20"
            HorizontalAlignment="Center"
            Content="Créer Activité"
            FontSize="36"
            FontWeight="Bold" />


        <Label
            x:Name="lbCreerActivite"
            Margin="40,20,0,0"
            HorizontalAlignment="Left"
            Content="Nom"
            FontSize="18" />
        <TextBox
            x:Name="txtNomActivite"
            Margin="40,0,40,0"
            TextWrapping="Wrap" />

        <Button
            x:Name="btAjouterActivite"
            Width="60"
            Height="20"
            Margin="0,20,40,0"
            HorizontalAlignment="Right"
            Click="Button_Click"
            Content="Valider"
            IsDefault="True" />

    </StackPanel>
</UserControl>
