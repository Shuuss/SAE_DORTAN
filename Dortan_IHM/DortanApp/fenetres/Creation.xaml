<Window
    x:Class="Dortan.Creation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dortan"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Creation"
    Width="400"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <Label
            x:Name="labCreer"
            HorizontalAlignment="Center"
            Content="Créer Activité"
            FontSize="36"
            FontWeight="Bold" />
        <Label Margin="60,50,0,0" Content="Nom" />
        <TextBox Margin="60,5,60,0" TextWrapping="Wrap" />
        <Label Margin="60,20,0,0" Content="Description" />
        <TextBox
            Height="50"
            Margin="60,5,60,0"
            TextWrapping="Wrap" />
        <Button Margin="100,50,100,0" Content="Valider" />


    </StackPanel>
</Window>
