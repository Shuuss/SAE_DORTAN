<Window x:Class="DortanApp.Recap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DortanApp"
        mc:Ignorable="d"
        Title="Recap" Height="450" Width="400">
    <StackPanel>
        <Label Content="Nom activité" Margin="0,20,0,0"/>
        <TextBox x:Name="tbNom" TextWrapping="Wrap" Margin="20,5,20,0"/>
        <Label Content="Date début activité" Margin="0,10,0,0"/>
        <DatePicker x:Name="dpDate" Margin="0,5,0,0"/>
        <Label Content="durée" Margin="0,10,0,0"/>
        <TextBox x:Name="tbDuree" TextWrapping="Wrap" Margin="20,5,20,0"/>
        <Label Content="Matériels sélectionnés" Margin="0,10,0,0"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,5,0,0"/>

    </StackPanel>
</Window>
